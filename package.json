{
    "name": "nodejs-api",
    "version": "1.0.0",
    "description": "Express API Base Structure For TypeScript",
    "main": "index.js",
    "scripts": {
        "start": "node app",
        "dev": "tsc && concurrently \"npm run webpack\" \"npm run copy-files\" \"nodemon -q dist/app.js\"",
        "build": "tsc --outDir build && concurrently \"cp -r ./src/views/ ./build/src/views/\" \"cp -r ./package.json ./build/\" \"rm -rf ./build/src/interfaces\"",
        "webpack": "webpack --config webpack.config.ts",
        "copy-files": "cp -r ./src/views/ ./dist/src/views/",
        "clear": "rm -rf build dist"
    },
    "keywords": [],
    "author": "CongHuy.dev",
    "license": "ISC",
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "chalk": "^4.1.2",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "googleapis": "^105.0.0",
        "helmet": "^5.1.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "mongoose": "^6.4.4",
        "morgan": "^1.10.0",
        "nodemailer": "^6.7.7",
        "rotating-file-stream": "^3.0.4",
        "validator": "^13.7.0"
    },
    "devDependencies": {
        "@babel/core": "^7.18.6",
        "@babel/register": "^7.17.7",
        "@types/bcryptjs": "^2.4.2",
        "@types/cors": "^2.8.12",
        "@types/dotenv": "^8.2.0",
        "@types/estree": "^0.0.52",
        "@types/express": "^4.17.13",
        "@types/helmet": "^4.0.0",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/lodash": "^4.14.182",
        "@types/morgan": "^1.9.3",
        "@types/node": "^18.0.0",
        "@types/nodemailer": "^6.4.4",
        "@types/validator": "^13.7.4",
        "concurrently": "^7.2.2",
        "nodemon": "^2.0.18",
        "ts-loader": "^9.3.1",
        "ts-node": "^10.8.2",
        "typescript": "^4.7.4",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0",
        "webpack-node-externals": "^3.0.0"
    }
}
